<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_135sdp"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/_10sdp"
    android:id="@+id/clickLL"
    >
<!--    android:background="@drawable/round_background_border"-->

    <LinearLayout
        android:id="@+id/viewProductView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/CategoryCV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp">


            <ImageView
                android:id="@+id/serviceImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_135sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/dummyproduct" />
            <!--        <ImageView-->
            <!--            android:id="@+id/serviceImage"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:src="@drawable/dummyproduct"-->
            <!--            android:scaleType="centerCrop"/>-->

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_10sdp"
            android:weightSum="2">


            <TextView
                android:id="@+id/serviceCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/sourcesanspro_medium"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/serviceCategoryDec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro_regular"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>