<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.uploadDocumentation_retailer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include
            android:id="@+id/reg_header"
            layout="@layout/header" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="Certificate Of Incorporation (Business Registration Letter )"
                    android:textColor="@color/title_myprofile"
                    android:textSize="@dimen/Form_ETorTV" />


                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/focus"
                    android:elevation="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:padding="@dimen/_6sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/COI_Choose_File"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:background="@drawable/login_button"
                        android:paddingHorizontal="@dimen/_30sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text="Choose File"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/COI_Choose_File_Path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="19dp"
                        android:layout_toEndOf="@+id/COI_Choose_File"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:gravity="center"
                        android:text="no file selected"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="VAT Registration Confirmation (If Applicable)"
                    android:textColor="@color/title_myprofile"
                    android:textSize="@dimen/Form_ETorTV" />

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/focus"
                    android:elevation="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_6sdp"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/VAT_Choose_File"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:background="@drawable/login_button"
                        android:paddingHorizontal="@dimen/_30sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text="Choose File"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/VAT_Choose_File_Path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="19dp"
                        android:layout_toEndOf="@+id/VAT_Choose_File"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:gravity="center"
                        android:text="no file selected"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="Director Consent Form (To Be Completed)"
                    android:textColor="@color/title_myprofile"
                    android:textSize="@dimen/Form_ETorTV" />

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/focus"
                    android:elevation="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_6sdp"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Director_Choose_File"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:background="@drawable/login_button"
                        android:paddingHorizontal="@dimen/_30sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text="Choose File"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/Director_Choose_File_Path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="19dp"
                        android:layout_toEndOf="@+id/Director_Choose_File"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:gravity="center"
                        android:text="no file selected"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="Director (s) ID Document"
                    android:textColor="@color/title_myprofile"
                    android:textSize="@dimen/Form_ETorTV" />

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/focus"
                    android:elevation="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_6sdp"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Director_id_Choose_File"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:background="@drawable/login_button"
                        android:paddingHorizontal="@dimen/_30sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text="Choose File"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/Director_id_Choose_File_Path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="19dp"
                        android:layout_toEndOf="@+id/Director_id_Choose_File"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:gravity="center"
                        android:text="no file selected"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="Bank Confirmation Letter"
                    android:textColor="@color/title_myprofile"
                    android:textSize="@dimen/Form_ETorTV" />

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/focus"
                    android:elevation="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_6sdp"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Bank_Choose_File"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:background="@drawable/login_button"
                        android:paddingHorizontal="@dimen/_30sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text="Choose File"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/Bank_Choose_File_Path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="19dp"
                        android:layout_toEndOf="@+id/Bank_Choose_File"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:gravity="center"
                        android:text="no file selected"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>


                <Button
                    android:id="@+id/upload_document_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/login_button"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:padding="@dimen/_8sdp"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/Title" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressbar_upload_document"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:visibility="gone"
        android:theme="@style/ProgressDialogStyle"
        android:layout_centerInParent="true"
        android:progress="50"
        />
</RelativeLayout>