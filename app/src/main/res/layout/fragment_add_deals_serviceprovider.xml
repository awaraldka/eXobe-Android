<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.allServices.AddDealsServiceProvider">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/viewDealLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="vertical"
            android:visibility="visible">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/source_sans_pro_regular"
                android:text="Service"
                android:textColor="@color/black"
                android:textSize="@dimen/SUbTitle" />

            <TextView
                android:id="@+id/selectService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/backgroundsearch"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:fontFamily="@font/source_sans_pro_regular"
                android:hint="Select Service"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="@dimen/SUbTitle" />

            <TextView
                android:id="@+id/selectService_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/source_sans_pro_regular"
                android:textColor="@color/error"
                android:textSize="@dimen/_11sdp" />


            <RelativeLayout
                android:id="@+id/image_Relative"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/backgroundsearch">


                <LinearLayout
                    android:id="@+id/imageAdding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_20sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:gravity="center"
                        android:text="Add image"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/subcategory_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dummyproduct"
                    android:visibility="gone"/>


            </RelativeLayout>

            <TextView
                android:id="@+id/Image_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/source_sans_pro_regular"
                android:textColor="@color/error"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_regular"
                android:text="Category"
                android:textColor="@color/black"
                android:textSize="@dimen/SUbTitle" />

            <TextView
                android:id="@+id/Category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/backgroundsearch"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:fontFamily="@font/source_sans_pro_regular"
                android:hint="Select Category"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="@dimen/SUbTitle" />

            <TextView
                android:id="@+id/Category_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/source_sans_pro_regular"
                android:textColor="@color/error"
                android:textSize="@dimen/_11sdp" />

            <!--            android:hint="Select Sub Category"-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_regular"
                android:text="Sub-Category"
                android:textColor="@color/black"
                android:textSize="@dimen/SUbTitle" />

            <TextView
                android:id="@+id/SubCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/backgroundsearch"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:fontFamily="@font/source_sans_pro_regular"
                android:hint="Select Sub-Category"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="@dimen/SUbTitle" />

            <TextView
                android:id="@+id/SubCategory_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/source_sans_pro_regular"
                android:textColor="@color/error"
                android:textSize="@dimen/_11sdp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_regular"
                android:text="Actual Amount(R)"
                android:textColor="@color/black"
                android:textSize="@dimen/SUbTitle" />

            <EditText
                android:id="@+id/actualAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/backgroundsearch"
                android:enabled="false"
                android:fontFamily="@font/source_sans_pro_regular"
                android:hint=""

                android:inputType="numberDecimal"
                android:maxLength="7"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="@dimen/SUbTitle" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/source_sans_pro_regular"
                android:textColor="@color/error"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_regular"
                android:text="Discount(%)"
                android:textColor="@color/black"
                android:textSize="@dimen/SUbTitle" />

            <EditText
                android:id="@+id/percent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/backgroundsearch"
                android:fontFamily="@font/source_sans_pro_regular"
                android:hint="Enter discount"
                android:inputType="numberDecimal"
                android:maxLength="2"
                android:imeOptions="actionDone"
                android:enabled="false"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="@dimen/SUbTitle" />

            <TextView
                android:id="@+id/percentError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_regular"
                android:textColor="@color/error"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_regular"
                android:text="Deal Amount(R)"
                android:textColor="@color/black"
                android:textSize="@dimen/SUbTitle" />

            <EditText
                android:id="@+id/AmmountDeals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/backgroundsearch"
                android:fontFamily="@font/source_sans_pro_regular"
                android:hint=""
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLength="7"
                android:padding="10dp"
                android:enabled="false"
                android:singleLine="true"
                android:textSize="@dimen/SUbTitle" />
            <!--            android:hint="Enter deal amount"-->


            <TextView
                android:id="@+id/AmmountDeals_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_regular"
                android:textColor="@color/error"
                android:textSize="@dimen/_11sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="Start Date"
                    android:textColor="@color/black"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/SUbTitle" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="Start Time"
                    android:textColor="@color/black"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/SUbTitle" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="2">

                <RelativeLayout
                    android:id="@+id/startdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/backgroundsearch"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textstartdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:hint="Start Date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/SUbTitle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/calender_new"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/start_time_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/backgroundsearch"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:hint="Start Time"
                        android:textColor="@color/black"
                        android:textSize="@dimen/SUbTitle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/clock_new"
                        android:visibility="gone" />
                </RelativeLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/startdate_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/source_sans_pro_regular"
                android:textColor="@color/error"
                android:textSize="@dimen/_11sdp" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="End Date"
                    android:textColor="@color/black"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/SUbTitle" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="End Time"
                    android:textColor="@color/black"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/SUbTitle" />



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <RelativeLayout
                    android:id="@+id/end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/backgroundsearch"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textenddate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:hint="End Date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/SUbTitle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/calender_new"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/end_time_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/backgroundsearch"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:hint="End Time"
                        android:textColor="@color/black"
                        android:textSize="@dimen/SUbTitle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/clock_new"
                        android:visibility="gone" />
                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/enddate_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/source_sans_pro_regular"
                android:textColor="@color/error"
                android:textSize="@dimen/_11sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:background="@drawable/login_button"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="Add Service"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/Title" />

                <Button
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:background="@drawable/login_button"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="Update Service"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/Title"
                    android:visibility="gone" />

            </RelativeLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/adddeal_progressbar"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_centerInParent="true"
        android:progress="50"
        android:theme="@style/ProgressDialogStyle"
        android:visibility="gone" />

</RelativeLayout>