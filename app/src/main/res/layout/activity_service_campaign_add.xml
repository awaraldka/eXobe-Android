<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.services.ServiceCampaignAddActivity">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/red"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:visibility="visible">


            <ImageView
                android:id="@+id/backButtonClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_arrow"
                app:tint="@color/white" />


            <TextView
                android:id="@+id/titleHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/source_sans_pro_regular"
                android:text="Booking Campaign"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>


    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/source_sans_pro_regular"
                android:text="Booking Category"
                android:textColor="@color/black"
                android:textSize="@dimen/matterText" />

            <TextView
                android:id="@+id/serviceCategoryTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/backgroundsearch"
                android:fontFamily="@font/source_sans_pro_regular"
                android:hint="Select booking category"
                android:padding="@dimen/_8sdp"
                android:singleLine="true"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/matterText" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/source_sans_pro_regular"
                android:text="Booking Sub Category"
                android:textColor="@color/black"
                android:textSize="@dimen/matterText" />

            <TextView
                android:id="@+id/serviceSubCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/backgroundsearch"
                android:fontFamily="@font/source_sans_pro_regular"
                android:hint="Select booking sub category"
                android:padding="@dimen/_7sdp"
                android:singleLine="true"
                android:drawableEnd="@drawable/down_arrow"
                android:textColor="@color/black"
                android:textSize="@dimen/matterText" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/source_sans_pro_regular"
                android:text="Booking Name"
                android:textColor="@color/black"
                android:textSize="@dimen/matterText" />

            <TextView
                android:id="@+id/serviceNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/backgroundsearch"
                android:fontFamily="@font/source_sans_pro_regular"
                android:hint="Select booking sub category"
                android:padding="@dimen/_7sdp"
                android:singleLine="true"
                android:drawableEnd="@drawable/down_arrow"
                android:textColor="@color/black"
                android:textSize="@dimen/matterText" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/source_sans_pro_regular"
                android:text="Actual Price"
                android:textColor="@color/black"
                android:textSize="@dimen/matterText" />

            <TextView
                android:id="@+id/actualPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/backgroundsearch"
                android:fontFamily="@font/source_sans_pro_regular"
                android:padding="@dimen/_8sdp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/matterText" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:fontFamily="@font/source_sans_pro_regular"
                android:textColor="@color/error"
                android:visibility="gone"
                android:textSize="@dimen/_11sdp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/source_sans_pro_regular"
                android:text="Discount Price"
                android:textColor="@color/black"
                android:textSize="@dimen/matterText" />

            <EditText
                android:id="@+id/discountedPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/backgroundsearch"
                android:fontFamily="@font/source_sans_pro_regular"
                android:hint="0"
                android:padding="@dimen/_8sdp"
                android:singleLine="true"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/matterText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:text="Start Date"
                        android:layout_weight="0.5"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/matterText" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:text="Start Time"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="0.5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/matterText" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:weightSum="1">
                    <RelativeLayout
                        android:id="@+id/startdate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/backgroundsearch">

                        <TextView
                            android:id="@+id/startDateTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:hint="Select start date"
                            android:padding="@dimen/_7sdp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/matterText" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/calender_new"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/startTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@drawable/backgroundsearch">

                        <TextView
                            android:id="@+id/startTimeTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:hint="Select start time"
                            android:padding="@dimen/_7sdp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/matterText" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/clock_new"/>
                    </RelativeLayout>




                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:text="End Date"
                        android:layout_weight="0.5"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/matterText" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:text="End Time"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="0.5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/matterText" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:weightSum="1">
                    <RelativeLayout
                        android:id="@+id/endDateRL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/backgroundsearch">

                        <TextView
                            android:id="@+id/endDateTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:hint="Select end date"
                            android:padding="@dimen/_7sdp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/matterText" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/calender_new"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/endTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@drawable/backgroundsearch">

                        <TextView
                            android:id="@+id/endTimeTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:hint="Select end time"
                            android:padding="@dimen/_7sdp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/matterText" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/clock_new"/>
                    </RelativeLayout>




                </LinearLayout>


            </LinearLayout>



            <TextView
                android:id="@+id/startCampaign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_button"
                android:text="Start Campaign"
                android:gravity="center"
                android:paddingVertical="@dimen/_5sdp"
                android:textAllCaps="false"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_25sdp"
                android:fontFamily="@font/source_sans_pro_regular"
                android:textColor="@color/white"
                android:textSize="@dimen/Title"
                android:visibility="visible" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>