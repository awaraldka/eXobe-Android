<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.profile.EditProfileServiceProviderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="111dp"
                        android:layout_height="111dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:src="@drawable/layer_3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/select_Image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
                        android:background="#00FFFFFF"
                        android:src="@drawable/ic_baseline_camera_alt_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.619"
                        app:layout_constraintStart_toStartOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:text="@string/first_name"
                        android:textColor="@color/title_myprofile"
                        android:textSize="@dimen/Form_ETorTV" />

                    <EditText
                        android:id="@+id/First_name_ET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/backgroundsearch"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:hint="Enter first name"
                        android:inputType="textCapWords"
                        android:maxLength="30"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/Form_ETorTV" />

                    <TextView
                        android:id="@+id/FirstName_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:text="@string/last_name"
                        android:textColor="@color/title_myprofile"
                        android:textSize="@dimen/Form_ETorTV" />

                    <EditText
                        android:id="@+id/Last_name_ET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/backgroundsearch"
                        
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:hint="Enter last name"
                        android:inputType="textCapWords"
                        android:maxLength="30"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/Form_ETorTV" />

                    <TextView
                        android:id="@+id/Last_name_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:text="Email"
                        android:textColor="@color/title_myprofile"
                        android:textSize="@dimen/Form_ETorTV" />

                    <EditText
                        android:id="@+id/Email_ET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:background="@drawable/backgroundsearch"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:hint="@string/Email"
                        android:inputType="textEmailAddress"
                        android:maxLength="45"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/Form_ETorTV" />

                    <TextView
                        android:id="@+id/Email_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:text="@string/contact_number"
                        android:textColor="@color/title_myprofile"
                        android:textSize="@dimen/Form_ETorTV" />

                    <LinearLayout
                        android:id="@+id/MobileEtLL"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/backgroundsearch"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/ccp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:onClick="onCountryPickerClick"
                            app:ccp_defaultPhoneCode="27"
                            app:ccp_textSize="15dp"
                            tools:ignore="MissingClass,OnClick" />

                        <EditText
                            android:id="@+id/Mobile_ET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:hint="Mobile number"
                            android:inputType="number"
                            android:maxLength="12"
                            android:paddingLeft="8dp"
                            android:paddingTop="10dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/SUbTitle" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/Mobile_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/red" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:text="Address Line 1"
                        android:textColor="@color/title_myprofile"
                        android:textSize="@dimen/Form_ETorTV" />

                    <LinearLayout
                        android:id="@+id/Address1EtLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/backgroundsearch">



                        <HorizontalScrollView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:fillViewport="true"
                            android:layout_weight="0.9"
                            android:scrollbars="none">



                            <EditText
                                android:id="@+id/Address1_ET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:fontFamily="@font/source_sans_pro_regular"
                                android:hint="Enter address line 1"
                                android:inputType="text"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:padding="@dimen/_5sdp"
                                android:singleLine="true"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/SUbTitle" />
                        </HorizontalScrollView>



                        <ImageView
                            android:id="@+id/locationTrackingClick"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/location"
                            android:layout_weight="0.1"/>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/Address1_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/red" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:text="Address Line 2"
                        android:textColor="@color/title_myprofile"
                        android:textSize="@dimen/Form_ETorTV" />

                    <EditText
                        android:id="@+id/Address2_ET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:background="@drawable/backgroundsearch"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:hint="Enter address line 2"
                        android:inputType="text"
                        android:maxLength="60"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/Form_ETorTV" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Country"
                            android:textColor="@color/black"
                            android:textSize="@dimen/SUbTitle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/ep_country1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="5dp"

                        android:background="@drawable/backgroundsearch"
                        
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:hint="Enter country"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/SUbTitle" />

                    <TextView
                        android:id="@+id/Country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/error" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="State                                                                                                                                                                                                                                                                                                                                                                       "
                            android:textColor="@color/black"
                            android:textSize="@dimen/SUbTitle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/State_ET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/backgroundsearch"
                        
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:hint="Enter State"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/SUbTitle" />

                    <TextView
                        android:id="@+id/State_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/error" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="City/Suburb"
                            android:textColor="@color/black"
                            android:textSize="@dimen/SUbTitle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:text=""
                            android:textColor="@color/red"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/CityEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/backgroundsearch"
                        
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:hint="Enter city"
                        android:inputType="textCapWords"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/SUbTitle" />

                    <TextView
                        android:id="@+id/CityTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/error" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:text="Zipcode"
                        android:textColor="@color/title_myprofile"
                        android:textSize="@dimen/Form_ETorTV" />

                    <EditText
                        android:id="@+id/postalcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:background="@drawable/backgroundsearch"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:hint="Enter zipcode"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/Form_ETorTV" />

                    <TextView
                        android:id="@+id/errorTvEditPostCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/error" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/flag_transparent"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:text="Payment Information"
                            android:textColor="@color/red"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight=".8"
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:text="Bank Name"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/black"
                            android:textSize="@dimen/SUbTitle" />

                        <EditText
                            android:id="@+id/Bankname_ET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/backgroundsearch"
                            
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:hint="Enter Bank Name"
                            android:inputType="text"
                            android:maxLength="45"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/Form_ETorTV" />

                        <TextView
                            android:id="@+id/Bankname_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:text=""
                            android:textColor="@color/red"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight=".8"
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:text="Bank Account Number"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/black"
                            android:textSize="@dimen/SUbTitle" />

                        <EditText
                            android:id="@+id/A_C_number_ET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/backgroundsearch"
                            
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:hint="Enter Bank Account Number"
                            android:inputType="text"
                            android:maxLength="20"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/Form_ETorTV" />

                        <TextView
                            android:id="@+id/A_C_number_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:text=""
                            android:textColor="@color/red"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight=".8"
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:text="IFSC"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/black"
                            android:textSize="@dimen/SUbTitle" />

                        <EditText
                            android:id="@+id/IFSC_ET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/backgroundsearch"
                            
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:hint="Enter IFSC"
                            android:inputType="text"
                            android:maxLength="11"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/Form_ETorTV" />

                        <TextView
                            android:id="@+id/IFSC_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:text=""
                            android:textColor="@color/red"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight=".8"
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:text="Branch Name"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/black"
                            android:textSize="@dimen/SUbTitle" />

                        <EditText
                            android:id="@+id/Branchname_ET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/backgroundsearch"
                            
                            android:fontFamily="@font/source_sans_pro_regular"
                            android:hint="Enter Branch Name"
                            android:inputType="text"
                            android:maxLength="45"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/Form_ETorTV" />

                        <TextView
                            android:id="@+id/Branchname_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:text=""
                            android:textColor="@color/red"
                            android:visibility="gone" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/updatebutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/login_button"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:text="Update"
                        android:textColor="@color/white"
                        android:textSize="@dimen/Title" />

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbarEditProfile"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_centerInParent="true"
        android:progress="50"
        android:theme="@style/ProgressDialogStyle"
        android:visibility="gone" />
</RelativeLayout>