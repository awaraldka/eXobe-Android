<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.retailer.NewUploadDocumentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include
            android:id="@+id/reg_header"
            layout="@layout/header" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="Certificate Of Incorporation (Business Registration Letter )"
                    android:textColor="@color/title_myprofile"
                    android:textSize="@dimen/SUbTitle" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:background="@drawable/backgroundsearch"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/COI_Choose_File"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_weight="1.2"
                        android:background="@drawable/login_button"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text="Choose File"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:textColor="@color/white"
                        android:textSize="@dimen/SUbTitle" />

                    <TextView
                        android:id="@+id/COI_Choose_File_Path"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@+id/COI_Choose_File"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:hint="no file selected"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/COI_Delete_icon"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_toEndOf="@+id/COI_Choose_File_Path"
                        android:layout_weight="0.2"
                        android:src="@drawable/delete_icon"
                        android:visibility="gone"/>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="VAT Registration Confirmation (If Applicable)"
                    android:textColor="@color/title_myprofile"
                    android:textSize="@dimen/SUbTitle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:background="@drawable/backgroundsearch"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/VAT_Choose_File"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_weight="1.2"
                        android:background="@drawable/login_button"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text="Choose File"
                        android:clickable="true"
                        android:focusable="true"
                        android:textColor="@color/white"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:textSize="@dimen/SUbTitle" />

                    <TextView
                        android:id="@+id/VAT_Choose_File_Path"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@+id/VAT_Choose_File"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:hint="no file selected"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/VAT_Delete_icon"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_toEndOf="@+id/COI_Choose_File_Path"
                        android:layout_weight="0.2"
                        android:src="@drawable/delete_icon"
                        android:visibility="gone"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="Director Consent Form (To Be Completed)"
                    android:textColor="@color/title_myprofile"
                    android:textSize="@dimen/SUbTitle" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:background="@drawable/backgroundsearch"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/Director_Choose_File"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_weight="1.2"
                        android:background="@drawable/login_button"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text="Choose File"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:textColor="@color/white"
                        android:textSize="@dimen/SUbTitle" />

                    <TextView
                        android:id="@+id/Director_Choose_File_Path"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@+id/Director_Choose_File"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:hint="no file selected"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/Director_Delete_icon"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_toEndOf="@+id/COI_Choose_File_Path"
                        android:layout_weight="0.2"
                        android:src="@drawable/delete_icon"
                        android:visibility="gone"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="Director (s) ID Document"
                    android:textColor="@color/title_myprofile"
                    android:textSize="@dimen/SUbTitle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:background="@drawable/backgroundsearch"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/Director_id_Choose_File"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_weight="1.2"
                        android:background="@drawable/login_button"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text="Choose File"
                        android:clickable="true"
                        android:focusable="true"
                        android:textColor="@color/white"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:textSize="@dimen/SUbTitle" />

                    <TextView
                        android:id="@+id/Director_id_Choose_File_Path"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@+id/Director_id_Choose_File"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:hint="no file selected"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/Director_id_Delete_icon"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_toEndOf="@+id/COI_Choose_File_Path"
                        android:layout_weight="0.2"
                        android:src="@drawable/delete_icon"
                        android:visibility="gone"/>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="Bank Confirmation Letter"
                    android:textColor="@color/title_myprofile"
                    android:textSize="@dimen/SUbTitle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:background="@drawable/backgroundsearch"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/Bank_Choose_File"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_weight="1.2"
                        android:background="@drawable/login_button"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:text="Choose File"
                        android:clickable="true"
                        android:focusable="true"
                        android:textColor="@color/white"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:textSize="@dimen/SUbTitle"/>

                    <TextView
                        android:id="@+id/Bank_Choose_File_Path"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@+id/Bank_Choose_File"
                        android:layout_weight="1.6"
                        android:fontFamily="@font/source_sans_pro_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:hint="no file selected"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/Bank_Delete_icon"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_toEndOf="@+id/COI_Choose_File_Path"
                        android:layout_weight="0.2"
                        android:src="@drawable/delete_icon"
                        android:visibility="gone"/>
                </LinearLayout>


                <Button
                    android:id="@+id/upload_document_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/login_button"
                    android:padding="@dimen/_8sdp"
                    android:fontFamily="@font/source_sans_pro_regular"
                    android:text="Submit"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar_upload_document"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_centerInParent="true"
        android:progress="50"
        android:theme="@style/ProgressDialogStyle"
        android:visibility="gone" />
</RelativeLayout>