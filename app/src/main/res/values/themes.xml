<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EXobe" parent="Theme.AppCompat.Light.NoActionBar" tools:ignore="DuplicateDefinition">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DatePickerTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/red</item>
    </style>
    <style name="boldText">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/source_sans_pro_regular</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="normalText">
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/source_sans_pro_regular</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/rating_bar_golden</item>


    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">

        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/cornercircle</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:typeface">monospace</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />
    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/Redish</item>
    </style>

    <style name="ButtonProgress" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="Theme.EXobe.DefaultLottieLoader">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="lottie_loop">true</item>
        <item name="lottie_rawRes">@raw/addtocartloader</item>
    </style>

    <style name="Theme.EXobe.DefaultLottieLoader2">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="lottie_loop">true</item>
        <item name="lottie_rawRes">@raw/internet_connection</item>
    </style>

    <style name="Theme.EXobe.DefaultLottieLoader3">
        <item name="android:layout_width">@dimen/_100sdp</item>
        <item name="android:layout_height">@dimen/_100sdp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="lottie_loop">true</item>
        <item name="lottie_rawRes">@raw/payment_done_lottie</item>
    </style>

    <style name="Theme.EXobe.DefaultLottieLoader4">
        <item name="android:layout_width">@dimen/_100sdp</item>
        <item name="android:layout_height">@dimen/_100sdp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="lottie_loop">true</item>
        <item name="lottie_rawRes">@raw/payment_failed_lottie</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Fade">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
        <item name="android:textSize">@dimen/HeaderHeading</item>
    </style>

    <style name="VerticalProgressBar">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:rotation">270</item>
        <item name="android:progressTint">@android:color/holo_red_dark</item>
    </style>
  <!-- Base application theme. -->
    <style name="Base.Theme.EXobe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>







</resources>